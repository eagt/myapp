<div class="container h-100 mt-12">  <!-- This div and the one below will do center the card -->
  <div class="row h-100 justify-content-center align-items-center">
    <div class="card">
      <div class="card-header text-center">
        <h2>Change your password</h2>
      </div>
      <div class="card-body text-center">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

          <div class="mb-3 row">
            <label for="inputPassword" class="col-sm-3 col-form-label"><%= f.label :password, "New password" %></label>            
            <div class="col-sm-9">
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
            </div>
          </div><br/>

          <div class="mb-3 row">
            <label for="inputPassword" class="col-sm-3 col-form-label"><%= f.label :password_confirmation, "Confirm new password" %></label>
            <div class="col-sm-9">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          </div>
          <%= f.submit "Change my password", class: "btn btn-login" %>
        <% end %>
      </div>
      <div class="card-footer text-center pb-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
